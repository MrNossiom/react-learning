{
	"name": "react-learning",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"start": "turbo run start --parallel",
		"lint": "turbo run lint --parallel",
		"format": "prettier --write \"**/*.{html,scss,js,json,ts,md}\""
	},
	"devDependencies": {
		"prettier": "^2.5.1",
		"turbo": "latest"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": true
	},
	"packageManager": "yarn@1.22.17"
}
